<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3E5FC"
    tools:context=".ui.login.LogInActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp">

            <ImageView
                android:id="@+id/iv_login_banner"
                android:layout_width="match_parent"
                android:layout_height="133dp"
                app:srcCompat="@drawable/login_banner" />

            <TextView
                android:id="@+id/tv_login_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="63dp"
                android:layout_marginTop="32dp"
                android:text="Login"
                android:textAllCaps="true"
                android:textColor="#FFF"
                android:textSize="50dp" />
        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="5dp">

            <EditText
                android:id="@+id/et_mobile_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Mobile"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:text="" />
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="5dp">

            <EditText
                android:id="@+id/et_password_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPersonName"
                android:text="" />
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/btn_login_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#0288D1"
                    android:text="Login"
                    android:textColor="#FFFF"
                    android:textSize="15dp"
                    android:onClick="onViewClicked"/>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="5dp">

                <Button
                    android:id="@+id/btn_register_log"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#0288D1"
                    android:text="Register"
                    android:textColor="#FFFF"
                    android:textSize="15dp"
                    android:onClick="onViewClicked"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_forgot_pw"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="Forgot Password?"
            android:textColor="#212121"
            android:textSize="20dp"
            android:onClick="onViewClicked"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fpwframefrag"
        android:layout_width="0dp"
        android:layout_height="353dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>