<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.splash.SplashActivity">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary_light"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_omnibus_icon"
            android:layout_width="match_parent"
            android:layout_height="252dp"
            android:padding="15dp"
            app:srcCompat="@drawable/omnibus_icon"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tv_omnibus_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:text="OMNIBUS"
            android:textColor="@color/colorIcons"
            android:textSize="80dp" />

        <TextView
            android:id="@+id/tv_omnibus_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="Taking You Everywhere"
            android:textSize="25dp"
            android:textStyle="italic" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivombi"
        android:layout_width="420dp"
        android:layout_height="232dp"
        android:layout_marginBottom="364dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/omnibus_icon" />
</android.support.constraint.ConstraintLayout>